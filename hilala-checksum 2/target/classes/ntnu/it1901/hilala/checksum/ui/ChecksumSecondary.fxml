<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ntnu.it1901.hilala.checksum.ui.ChecksumSecondaryController"
      alignment="TOP_CENTER" prefHeight="500.0" prefWidth="950.0" spacing="20.0" styleClass="root">

  <children>
    <HBox alignment="CENTER_LEFT" prefHeight="47.0" prefWidth="910.0" spacing="20.0">
      <children>
        <Button fx:id="secondaryButton" id="secondaryButton"
                text="Back to overview"
                onAction="#switchToPrimary"/>
        <Label alignment="CENTER" text="Details for:" textAlignment="CENTER">
          <font><Font size="21.0"/></font>
        </Label>
        <Label fx:id="lblTitleFileName" text="file">
          <font><Font size="21.0"/></font>
        </Label>
      </children>
      <padding><Insets left="10.0"/></padding>
    </HBox>

    <GridPane>
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="268.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="642.0"/>
      </columnConstraints>
      <rowConstraints>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
        <RowConstraints vgrow="SOMETIMES"/>
      </rowConstraints>

      <children>
        <Label text="Filename:"/>
        <Label fx:id="lblFilename" GridPane.columnIndex="1"/>

        <Label text="Absolute path:" GridPane.rowIndex="1"/>
        <Label fx:id="lblAbsolutePath" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Size: in bytes:" GridPane.rowIndex="2"/>
        <Label fx:id="lblSizeBytes" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Size:" GridPane.rowIndex="3"/>
        <Label fx:id="lblSizeHuman" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="MD5:" GridPane.rowIndex="4"/>
        <HBox alignment="CENTER_LEFT" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
          <children>
            <Label fx:id="lblMd5" alignment="CENTER"/>
            <TextField fx:id="txtExpectedMd5" promptText="expected MD5"/>
            <ImageView fx:id="imgMd5Status" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true"/>
          </children>
          <padding><Insets left="10.0"/></padding>
        </HBox>

        <Label text="SHA256:" GridPane.rowIndex="5"/>
        <HBox alignment="CENTER_LEFT" spacing="20.0" GridPane.columnIndex="1" GridPane.rowIndex="5">
          <children>
            <Label fx:id="lblSha256" alignment="CENTER"/>
            <TextField fx:id="txtExpectedSha256" promptText="expected SHA256"/>
            <ImageView fx:id="imgSha256Status" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true"/>
          </children>
          <padding><Insets left="10.0"/></padding>
        </HBox>
      </children>
    </GridPane>
  </children>

  <padding>
    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
  </padding>
</VBox>
