<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="950.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ntnu.it1901.hilala.checksum.ui.ChecksumPrimaryController">

  <children>
    <HBox alignment="CENTER_LEFT" prefHeight="47.0" prefWidth="910.0" spacing="20.0">
      <children>
        <Label alignment="CENTER" text="Overview" textAlignment="CENTER">
          <font><Font size="21.0"/></font>
        </Label>

        <Button fx:id="chooseButton" id="chooseButton"
                text="Load more files..."
                onAction="#chooseFiles"/>

        <Button fx:id="secondaryButton" id="secondaryButton"
            text="Back to overview"
            onAction="#switchToSecondary"/>

        <Button fx:id="primaryButton" id="primaryButton"
        text="Details ..."
        onAction="#doNothing"/>

        


        <Button fx:id="copyButton" id="copyButton"
                text="Copy"
                onAction="#copyToClipboard"/>

        <Separator fx:id="topSeparator" orientation="HORIZONTAL" prefWidth="100.0"/>

        <Button fx:id="refreshButton" id="refreshButton"
                text="Refresh"
                onAction="#refreshTable"/>
      </children>
      <padding><Insets left="10.0"/></padding>
    </HBox>

    <TableView fx:id="filesTable" id="filesTable" minHeight="200.0" prefWidth="200.0">
      <columns>
        <TableColumn fx:id="fileColumn"       text="Filename"   prefWidth="400.0"/>
        <TableColumn fx:id="fileSizeColumn"   text="Size"       prefWidth="100.0"/>
        <TableColumn fx:id="md5hashColumn"    text="MD5"        prefWidth="150.0"/>
        <!-- Önemli: boşluklu -->
        <TableColumn fx:id="sha256hashColumn" text="SHA 256"    prefWidth="150.0"/>
        <TableColumn fx:id="progressColumn"   text="Progress"   prefWidth="75.0"/>
        <TableColumn fx:id="absolutePath"     text="Full path"  prefWidth="150.0"/>
      </columns>
    </TableView>
  </children>

  <padding><Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/></padding>
</VBox>
